<template>
    <t t-name="NotificationBar">
        <li id="noti_Container">
            <div id="noti_Button"> </div>
            <div id="notifications">
                <h4 style="text-align:left;">Notifications</h4>
                <hr class="hr_noti"/>
                <div t-foreach="widget.data" t-as="notify" class="all_nofi">
                    <h5 style="text-align:center;">
                        <t t-esc="notify.name"/>
                    </h5>
                    <hr class="hr_noti"/>
                    <div>
                        <table class="tabletr">
                            <thead >
                                <tr>
                                    <t t-foreach="notify.col" t-as="col">
                                        <th style="text-align:center;">
                                            <t t-esc="col.name"/>
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="notify.value" t-as="data">
                                    <tr class="data_tr">
                                        <t t-foreach="data" t-as="d">
                                            <td t-att-id="d.link" style="text-align:center;" class="this_is_button">
                                                <t t-esc="d.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <hr class="hr_noti"/>
                </div>
            </div>
        </li>
    </t>
</template>
