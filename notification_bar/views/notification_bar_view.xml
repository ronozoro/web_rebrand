<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_notification_bar_tree" model="ir.ui.view">
            <field name="name">notification.bar.tree</field>
            <field name="model">notification.bar</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Notification">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="field_id"/>
                    <field name="display_options"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="view_notification_bar_form" model="ir.ui.view">
            <field name="name">notification.bar.form</field>
            <field name="model">notification.bar</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Notification" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="model_id"/>
                                <field name="reminder_options"/>
                                <field name="display_options"/>
                            </group>
                            <group>
                                <field name="field_id"/>
                                <field name="num_of_days" attrs="{'invisible':[('reminder_options','!=','x_days')],
                                'required':[('reminder_options','=','x_days')]}"/>
                                <field name="from_today" attrs="{'invisible':[('reminder_options','not in',('x_days','current_month','next_month'))]}"/>
                                <field name="user_field_id" attrs="{'invisible':[('display_options','!=','per_user')],
                                'required':[('display_options','=','per_user')]}"/>

                            </group>
                        </group>

                        <separator string="Display Fields" colspan="4"/>
                        <field name="display_fields" colspan="4" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_notification_bar_search" model="ir.ui.view">
            <field name="name">notification.bar.search</field>
            <field name="model">notification.bar</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Notification">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="field_id"/>
                    <field name="display_options"/>
                    <newline/>
                     <filter string="Active" domain="[('active','=',True)]"/>
                    <filter string="Not Active" domain="[('active','=',False)]"/>
                     <newline/>
                    <group expand="0" string="Group By">
                        <filter string="Active" name="Active &amp; Not Active" context="{'group_by':'active'}"/>
                            </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="notification_bar_view">
            <field name="name">Notification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">notification.bar</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_notification_bar_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="notification_bar_view_form">
            <field name="act_window_id" ref="notification_bar_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_notification_bar_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="notification_bar_view_tree">
            <field name="act_window_id" ref="notification_bar_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_notification_bar_tree"/>
        </record>
        <menuitem parent="base.menu_config" id="menuitem_notification_bar_view"
                  action="notification_bar_view" sequence="40"/>
    </data>
</openerp>