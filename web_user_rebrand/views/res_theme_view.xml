<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_theme_tree" model="ir.ui.view">
            <field name="name">res.theme.tree</field>
            <field name="model">res.theme</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Theme">

                    <field name="name"/>
                    <field name="default_view"/>

                </tree>
            </field>
        </record>
        <record id="res_theme_from" model="ir.ui.view">
            <field name="name">res.theme.form</field>
            <field name="model">res.theme</field>
            <field name="context">{'show_address': 1}</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Theme" version="7.0">
                    <separator string="Name &amp; Users"/>
                    <group col='4'>
                        <field name="name"/>
                        <field name="users" widget="many2many_tags"/>
                        <field name="default_view"/>
                    </group>
                    <separator string="Top Panel"/>
                    <group col='4'>
                        <field name="top_bg_color" widget="color"/>
                        <field name="top_border_color" widget="color"/>
                        <field name="top_font_color" widget="color"/>
                        <field name="top_active_font_color" widget="color"/>
                        <field name="top_active_bg_color" widget="color"/>
                        <field name="top_hover_font_color" widget="color"/>
                        <field name="top_hover_bg_color" widget="color"/>
                    </group>
                    <separator string="Left Panel"/>
                    <group col='4'>
                        <field name="left_bg_color" widget="color"/>
                        <field name="left_main_menu_color" widget="color"/>
                        <field name="left_sub_menu_color" widget="color"/>
                        <field name="left_active_font_color" widget="color"/>
                        <field name="left_active_bg_color" widget="color"/>
                        <field name="left_hover_font_color" widget="color"/>
                        <field name="left_hover_bg_color" widget="color"/>
                    </group>
                    <separator string="Buttons"/>
                    <group col='4'>
                        <field name="button_font_color" widget="color"/>
                        <field name="button_bg_color" widget="color"/>
                        <field name="button_bg_color_2" widget="color"/>
                        <field name="button_highlight_color" widget="color"/>
                        <field name="button_highlight_font_color" widget="color"/>
                    </group>
                    <separator string="Header"/>
                    <group col='4'>
                        <field name="header_section_bg" widget="color"/>
                        <field name="header_section_font_color" widget="color"/>
                    </group>
                    <separator string="More Configs"/>
                    <notebook>
                        <page string="User Custom">
                            <group col='4'>
                                <!--<field name="image_medium" widget="image" class="oe_avatar"/>-->
                                <field name="footer_string"/>
                                <field name="title_string"/>
                                <field name="url_string"/>
                                <field name="odoo_color" widget="color"/>
                            </group>
                            <group col='4'>
                                <field name="hide_prefe"/>
                                <field name="hide_about"/>
                                <field name="hide_account"/>
                                <field name="hide_help"/>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record id="res_theme_search" model="ir.ui.view">
            <field name="name">res.theme.search</field>
            <field name="model">res.theme</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Theme">
                    <field name="name"/>
                    <field name="users"/>
                    <newline/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="res_theme_action">
            <field name="name">Theme</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.theme</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="res_theme_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="res_theme_ref">
            <field name="act_window_id" ref="res_theme_action"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="res_theme_from"/>
        </record>
        <record model="ir.actions.act_window.view" id="res_theme_ref">
            <field name="act_window_id" ref="res_theme_action"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="res_theme_tree"/>
        </record>
        <menuitem id="web_theme_user_conf" name="Themes Configurations" parent="base.menu_administration"/>

        <menuitem id="user_theme_config" name="User Theme" sequence="100" parent="web_theme_user_conf"
                  action="res_theme_action"/>
    </data>
</openerp>