<?xml version="1.0"?>
<openerp>
    <data>
        <template id="assets_frontend" inherit_id="web.assets_common">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/web_user_rebrand/static/src/js/web_user_rebrand.js"/>
            </xpath>
        </template>
        <template id="web_user_rebrand.web_layout" inherit_id="web.layout">
            <xpath expr="//title" position="replace"></xpath>
            <xpath expr="//link[@rel='shortcut icon']" position="replace">
                <t t-set="favicon"
                   t-value="request.env['res.theme'].get_the_fac_icon()"/>
                <t t-if="favicon">
                    <link rel="shortcut icon" t-att-href="favicon" type="image/x-icon"/>
                </t>
            </xpath>
        </template>
    </data>
</openerp>